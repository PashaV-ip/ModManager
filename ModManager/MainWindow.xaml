                                <Button Grid.Column="2" Margin="10, 0, 0, 0" Name="btnBrowseAssemblers" VerticalAlignment="Center" Focusable="False" Template="{DynamicResource ResourceKey=BrowseButtonInOptions}" MinWidth="120" Content="Обзор ..." Command="{Binding BrowseAssemblersFolder}">

